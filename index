<body>

  <div class="card" id="flashcard" onclick="flipCard()">
    <div id="card-content"></div>
  </div>

  <div class="navigation">
    <button onclick="prevCard()">Previous</button>
    <button onclick="nextCard()">Next</button>
  </div>

  <script>
    const cards = [
      { name: "Kozłowski, Maciej", pron: "Koz-wov-ski, Ma-chyay" },
      { name: "Wieczorek, Grzegorz", pron: "Vyeh-cho-rek, G-zhe-gosh" },
      { name: "Szlaska, Anna", pron: "Shla-ska, An-na" },
      { name: "Kilijańska, Małgorzata", pron: "Kee-lee-yanska, Maʷwo-go-zha-ta" },
      { name: "Matyja, Andrzej", pron: "Ma-ty-ya, And-zhey" },
      { name: "Kowalska-Ocneanu, Ewa", pron: "Ko-val-ska Otch-neh-a-noo, Eh-va" },
      { name: "Hofman, Sylwester", pron: "Hoff-man, Sil-ves-ter" },
      { name: "Szopa, Łukasz", pron: "Sho-pa, Woo-kash" },
      { name: "Bielazik, Krzysztof", pron: "Byeh-la-zeek, K-zhi-sh-tof" },
      { name: "Pawłowska, Beata", pron: "Pav-wov-ska, Be-ah-ta" },
      // Add the rest of the names similarly...
    ];

    let currentIndex = 0;
    let flipped = false;
    const cardContent = document.getElementById("card-content");

    function flipCard() {
      flipped = !flipped;
      renderCard();
    }

    function playAudio(name) {
      const filename = name.replace(/,|\s|\u0141/g, match => {
        if (match === ',') return '';
        if (match === ' ') return '_';
        if (match === '\u0141') return 'L';
        return '';
      });
      const audio = new Audio(`audio/${filename}.mp3`);
      audio.play();
    }

    function renderCard() {
      const card = cards[currentIndex];
      if (!flipped) {
        cardContent.innerHTML = `${card.name}`;
      } else {
        cardContent.innerHTML = `
          <div>${card.name}</div>
          <div class="pronunciation">${card.pron}</div>
          <button onclick="event.stopPropagation(); playAudio('${card.name}')">🔊 Play</button>
        `;
      }
    }

    function nextCard() {
      if (currentIndex < cards.length - 1) currentIndex++;
      flipped = false;
      renderCard();
    }

    function prevCard() {
      if (currentIndex > 0) currentIndex--;
      flipped = false;
      renderCard();
    }

    renderCard();
  </script>
</body>
</html>
